# Исходный образ для Node.js
FROM node:16.14.0

# Создание директории приложения внутри образа
WORKDIR /untitled

# Копирование package.json и package-lock.json для установки зависимостей
COPY package*.json ./

# Установка зависимостей
RUN npm install

# Копирование файлов приложения внутрь образа
COPY . .

# Определение порта, который будет использоваться для запуска приложения
EXPOSE 3000

# Команда для запуска приложения
CMD [ "npm", "start" ]
